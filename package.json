          "command": "favLauncher.switchToWorkspace",
          "group": "navigation@0"
        },
        {
          "when": "view =~ /favLauncher\\.favoritesView/ && favLauncher.scope == 'team'",
          "command": "favLauncher.switchToWorkspace",
          "group": "navigation@0"
