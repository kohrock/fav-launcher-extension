{
  "name": "fav-launcher",
  "displayName": "Favorite Launcher",
  "description": "Quickly access favorite files, folders, commands and macros — with groups, notes, drag & drop and team sharing",
  "version": "1.0.0",
  "icon": "media/icon.png",
  "publisher": "kohrock",
  "author": {
    "name": "kohrock",
    "url": "https://github.com/kohrock"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kohrock/fav-launcher-extension"
  },
  "license": "MIT",
  "homepage": "https://github.com/kohrock/fav-launcher-extension#readme",
  "bugs": {
    "url": "https://github.com/kohrock/fav-launcher-extension/issues"
  },
  "galleryBanner": {
    "color": "#1e1e2e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "extensionKind": ["ui", "workspace"],
  "categories": ["Other", "Keymaps"],
  "keywords": ["favorites", "bookmark", "launcher", "productivity", "files", "commands", "macros", "shortcuts", "workspace", "team"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "favLauncher",
          "title": "Favorites",
          "icon": "media/star.svg"
        }
      ],
      "activitybar": [
        {
          "id": "favLauncherSidebar",
          "title": "Favorites",
          "icon": "media/star.svg"
        }
      ]
    },
    "views": {
      "favLauncher": [
        {
          "id": "favLauncher.favoritesView",
          "name": "Favorites"
        }
      ],
      "favLauncherSidebar": [
        {
          "id": "favLauncher.favoritesViewSidebar",
          "name": "Favorites"
        }
      ]
    },
    "configuration": {
      "title": "Fav Launcher",
      "properties": {
        "favLauncher.storageScope": {
          "type": "string",
          "enum": [
            "workspace",
            "global",
            "team"
          ],
          "enumDescriptions": [
            "Per workspace folder (default)",
            "Shared across all workspaces",
            "Saved to .vscode/favorites.json — commit to share with your team"
          ],
          "default": "workspace",
          "description": "Where to store favorites. Use the toggle button in the panel toolbar to switch quickly."
        },
        "favLauncher.noteDisplay": {
          "type": "string",
          "enum": [
            "both",
            "inline",
            "tooltip"
          ],
          "enumDescriptions": [
            "Show note inline and in tooltip (default)",
            "Inline only",
            "Tooltip only — keeps the list clean"
          ],
          "default": "both",
          "description": "How to display notes on favorite items."
        },
        "favLauncher.itemDescription": {
          "type": "string",
          "enum": [
            "both",
            "path",
            "note",
            "none"
          ],
          "enumDescriptions": [
            "Show path/command ID and note (default)",
            "Path or command ID only",
            "Note only",
            "Nothing — minimal clean view"
          ],
          "default": "both",
          "description": "What to show as secondary description text beside each item."
        },
        "favLauncher.sortOrder": {
          "type": "string",
          "enum": [
            "manual",
            "alpha",
            "type",
            "lastUsed"
          ],
          "enumDescriptions": [
            "Manual order — drag & drop to reorder (default)",
            "Alphabetical by label",
            "Grouped by type (file, command, macro…)",
            "Most recently used first"
          ],
          "default": "manual",
          "description": "How to sort favorite items."
        },
        "favLauncher.compactMode": {
          "type": "boolean",
          "default": false,
          "description": "Hide description text beside items for a denser, cleaner list."
        },
        "favLauncher.autoRevealCurrentFile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically highlight the current file in the Favorites panel when you switch editors."
        },
        "favLauncher.backupReminderDays": {
          "type": "number",
          "default": 0,
          "markdownDescription": "Show a backup reminder after this many days since the last export. Set to `0` to disable."
        },
        "favLauncher.showRecentSection": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'Recent' section at the top of the Favorites panel listing the 5 most recently used items."
        },
        "favLauncher.startupItemId": {
          "type": "string",
          "default": "",
          "description": "ID of a favorite item to automatically open/run when this workspace starts. Right-click any item and choose 'Set as Startup Item' to configure."
        }
      }
    },
