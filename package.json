      },
      {
        "command": "favLauncher.filterFavorites",
        "key": "ctrl+shift+f",
        "when": "focusedView == favLauncher.favoritesView || focusedView == favLauncher.favoritesViewSidebar"
      },
      {
        "command": "favLauncher.launchPinned1",
        "key": "ctrl+alt+1",
        "mac": "cmd+alt+1"
      },
      {
        "command": "favLauncher.launchPinned2",
